<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http:www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<!--  JDBC database connection setting -->
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://localhost:3306/lab7db</property>
		<property name="connection.username">root</property>
		<property name="connection.password"></property>
		
		<!-- JDBC Connection Pool Setting -->
		<property name="connection.pool_size">1</property>
		
		<!-- Choose the Hibernate dialect for specific database type -->
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
		
		<!-- Echo out the SQL to the console -->
		<property name="hibernate.show_sql">true</property>
		
		<property name="current_session_context_class">thread</property>
		
		<!-- list of XML mapping files -->
		<mapping resource=""/>
	</session-factory>
</hibernate-configuration>